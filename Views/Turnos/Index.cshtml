@model IEnumerable<Cantina.Models.Turno>

@{
    ViewData["Title"] = "Index";
}

<h1>TURNOS</h1>

<p>
    <a asp-action="Create">Cargar Nuevo Turno</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreTurno)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreTurno)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning"  asp-route-id="@item.IdTurno">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary"  asp-route-id="@item.IdTurno">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.IdTurno">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
